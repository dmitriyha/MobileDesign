<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fi.metropolia.healthquiz.activities.Question"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mikä on nuorten yleisin mielenterveyden häiriö?"
        android:id="@+id/question"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/question_button"
        android:text="Masennus"
        android:id="@+id/answer1"
        android:layout_below="@+id/question"
        android:width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/question_button"
        android:text="Syömishäiriö"
        android:id="@+id/answer2"
        android:width="200dp"
        android:layout_below="@+id/answer1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/question_button"
        android:text="Psykoosi"
        android:id="@+id/answer3"
        android:layout_below="@+id/answer2"
        android:width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/question_button"
        android:text="Peliriippuvuus"
        android:id="@+id/answer4"
        android:width="200dp"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Points "
        android:id="@+id/pointsText"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:textColor="#000"
        android:layout_marginTop="0dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="500"
        android:id="@+id/points"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:textColor="#000"
        android:layout_toRightOf="@+id/pointsText"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
